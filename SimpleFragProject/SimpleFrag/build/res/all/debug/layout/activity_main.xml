<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context=".MainActivity"
    android:id="@id/main_root_relative_layout">

    <lean.apps.ParentTextView
            android:id="@+id/touch_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_world"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
            />

    <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/touch_text_view"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"/>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_above="@+id/button"
            android:layout_marginBottom="41dp"
            android:layout_alignLeft="@+id/fragment_container"
            android:layout_alignParentRight="true"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Fragment Animation"
            android:id="@+id/button2"
            android:layout_above="@+id/button"
            android:layout_centerHorizontal="true"/>
    <!-- android:minHeight, maxHeight doesn't work for ProgressBar -->

</RelativeLayout>
